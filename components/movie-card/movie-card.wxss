/* components/movie-card.wxss */
.movie-card{
  display:flex;
  flex-direction: column;
  font-size:12px;
}
.movie-img-wrapper{
  width:230rpx;
  height:340rpx;
  overflow:hidden;
  border-radius: 12rpx;
}
.movie-img{
  width:100%;
  height:100%;
}
.movie-name{
  display:block;
  width:230rpx;
  color: #37a;
  /* text-align:center; */
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow: hidden;
  font-weight: bold;
}
.movie-score{
  /* text-align: center; */
  color: #e09015;
  font-size:10px;

}