/* pages/movie-detail/movie-detail.wxss */
.movie-detail{
  padding:30rpx;
  min-height:100%;
  background:#f8f5f6;
}
.overview {
  display: flex;
  /* align-items: flex-end; */
  margin-bottom:20rpx;
}

.movie-image-wrapper {
  overflow: hidden;
  border-radius: 12rpx;
  background:#fff;
  flex:none;
  display:flex;
  align-items:center;
  box-shadow: 1px 1px 4px 1px #aaa;
}

.movie-image{
  width:230rpx;
  height:340rpx;
}
.movie-info{
  display:flex;
  flex-direction: column;
  margin-left:20rpx;
  flex:auto;
}
.title{
  font-size:18px;
  font-weight: bold;
  margin-bottom:15rpx;
}
.desc{
  font-size:12px;
  color:#8d8c8d;
}
.score-wrapper{
  background:#fff;
  border-radius: 12rpx;
  margin-top:15rpx;
  padding:15rpx;
  box-shadow: 0 1px 2px 0 #aaa;
}
.score-slot{
  height:14rpx;
  background:#f5f5f5;
  margin-bottom:4rpx;
}
.score-value{
  height:100%;
  background:#ffac2c;
}
.star{
  line-height: 1;
  display:flex;
  align-items:center;
}
.star-list{
  width:100rpx;
  justify-content: flex-end;
}
.ais{
  align-items: stretch;
}
.sub-title{
  font-weight: bold;
  font-size:16px;
  
}
.summary{
  margin-bottom:40rpx;
}
.movie-summary{
  display:-webkit-box;
  overflow:hidden;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
  font-size:14px;
  line-height: 28px;
}

.movie-summary.collapse{
 -webkit-line-clamp: 3;
}

.comments{
  background:#fff;
  border-radius: 12rpx;
  margin-top:15rpx;
  padding:20rpx;
  box-shadow: 0 1px 2px 0 #aaa;
  margin-bottom:40rpx;
}

.avatar{
  height:80rpx;
  width:80rpx;
  border-radius: 50%;
  margin-right:20rpx;
}

.avatar-mini{
  height:50rpx;
  width:50rpx;
  border-radius: 50%;
  margin-right:10rpx;
}
.comment-item{
  border-bottom:1px solid #f5f5f5;
  margin:20rpx 0;
  padding: 20rpx 0;
}
.comment-content{
  font-size:14px;
  margin:10rpx 0;
}
.casts{
  margin-bottom:40rpx;
}
.cast-list{
  display:flex;
  overflow:auto;
}

.cast-img{
  width:230rpx;
  height:340rpx;
  border-radius: 12rpx;
}

.cast-card{
  margin-right:20rpx;
  display:flex;
  flex-direction: column;
  padding-bottom:10rpx;
}
.cast-card:last-child{
  margin-right:0;
}
.myrate{
  font-size: unset !important;
}
.review-list{
  margin:10rpx 0;
}

.reivew-item{
  background:#fff;
  margin:10rpx 0;
  padding:20rpx 30rpx;
}
.review-title{
  margin:10rpx 0;
}
.photo{
  margin-bottom:40rpx;
}
.photo-list{
  overflow:auto;
}
.photo-item{
  margin-right:10rpx;
}