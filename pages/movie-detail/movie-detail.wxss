/* pages/movie-detail/movie-detail.wxss */
.movie-detail{
  padding:30rpx;
  min-height:100%;
  background:#f8f5f6;
}
.overview {
  display: flex;
  /* align-items: flex-end; */
  margin-bottom:20rpx;
}

.movie-image-wrapper {
  overflow: hidden;
  border-radius: 12rpx;
  background:#fff;
  flex:none;
  display:flex;
  align-items:center;
  box-shadow: 1px 1px 4px 1px #aaa;
}

.movie-image{
  width:230rpx;
  height:340rpx;
}
.movie-info{
  display:flex;
  flex-direction: column;
  margin-left:20rpx;
  flex:auto;
}
.title{
  font-size:18px;
  font-weight: bold;
  margin-bottom:15rpx;
}
.desc{
  font-size:12px;
  color:#8d8c8d;
}
.score-wrapper{
  background:#fff;
  border-radius: 12rpx;
  margin-top:15rpx;
  padding:15rpx;
  box-shadow: 0 1px 2px 0 #aaa;
}
.score-slot{
  height:14rpx;
  background:#f5f5f5;
  margin-bottom:4rpx;
}
.score-value{
  height:100%;
  background:#ffac2c;
}
.star{
  line-height: 1;
  display:flex;
  align-items:center;
}
.star-list{
  width:100rpx;
  justify-content: flex-end;
}
.ais{
  align-items: stretch;
}
.sub-title{
  font-weight: bold;
  font-size:16px;
  
}
.movie-summary{
  display:-webkit-box;
  overflow:hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  margin-top: 10rpx;
}